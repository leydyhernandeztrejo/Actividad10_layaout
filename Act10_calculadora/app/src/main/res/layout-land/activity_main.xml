<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="143dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="15dp">

        <TextView
            android:id="@+id/tv_result7"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="12dp"
            android:text="@string/result"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_number2"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/tv_number12"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/number2"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_number1"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/tv_number13"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:text="@string/number1"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="169dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="373dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/et_result3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:enabled="true"
            android:hint="@string/init_value"
            android:inputType="numberDecimal"
            android:text="@string/init"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/et_number2"
            tools:layout_editor_absoluteX="415dp"
            tools:text="@string/init_value" />

        <EditText
            android:id="@+id/et_number4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="@string/init_value"
            android:inputType="numberDecimal"
            android:text="@string/init"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/et_number1"
            tools:layout_editor_absoluteX="415dp"
            tools:text="@string/init_value" />

        <EditText
            android:id="@+id/et_number5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/init_value"
            android:inputType="numberDecimal"
            android:text="@string/init"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="415dp"
            tools:layout_editor_absoluteY="15dp"
            tools:text="@string/init_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="149dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="193dp">

        <Button
            android:id="@+id/bt_add2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="addOnClick"
            android:text="@string/add"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="138dp" />

        <Button
            android:id="@+id/bt_module2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="moduleOnClick"
            android:text="@string/module"
            app:layout_constraintTop_toBottomOf="@+id/bt_multiplication"
            tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/bt_multiplication2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="multiplicationOnClick"
            android:text="@string/multiplication"
            app:layout_constraintTop_toBottomOf="@+id/bt_add"
            tools:layout_editor_absoluteX="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="149dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="376dp"
        tools:layout_editor_absoluteY="193dp">

        <Button
            android:id="@+id/bt_add4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="addOnClick"
            android:text="@string/add"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="138dp" />

        <Button
            android:id="@+id/bt_module4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="moduleOnClick"
            android:text="@string/module"
            app:layout_constraintTop_toBottomOf="@+id/bt_multiplication"
            tools:layout_editor_absoluteX="8dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>